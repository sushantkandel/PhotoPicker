<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhotoPicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="textStyleSubtitle2SemiBold" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textStyleSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStyleHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="textStyleBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextInputLayoutCustomFont" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.CustomFont</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
        <item name="prefixTextAppearance">@style/ThemeOverlay.TextInputEditText.CustomFont</item>
        <item name="prefixTextColor">@color/black_opacity_87</item>

    </style>


    <style name="ThemeOverlay.TextInputEditText.CustomFont" parent="ThemeOverlay.MaterialComponents">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="CustomFontTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="helperTextTextAppearance">@style/TextInputLayoutHelperText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
    </style>

    <style name="TextInputLayoutHintText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_9ssp</item>

    </style>

    <style name="TextInputLayoutHelperText" parent="TextAppearance.Design.HelperText">

        <item name="android:textSize">@dimen/_9ssp</item>
        <!--Added Later-->
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black_opacity_50</item>

    </style>


    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_9ssp</item>

    </style>

    <style name="textAppearanceNotFound" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black_opacity_50</item>

    </style>

    <style name="textAppearanceNotFoundDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black_opacity_30</item>

    </style>



</resources>